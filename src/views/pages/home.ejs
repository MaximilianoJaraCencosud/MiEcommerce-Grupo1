<!-- Home -->

<%- include('../partials/head', {variable : "Home | MiEcommerce"}) %>

<!-- Importación del Header -->
<%-include('../partials/header', {variable_search: true}) %>

<main class="home">
  <div class="home__container">
    <!-- Seccion verde de background -->
    <div class="home__bg-green"></div>

    <!-- Importación de menú de categorias -->
    <%- include('../partials/categories') %>

    <!-- Sección Card Hero -->
    <section class="section-hero">
      <% for(let i=0; i<3; i++){ %>
        <%- include('../partials/product-hero', { hero: hero[i] }) %>
      <% } %>
    </section>
    <!-- Sección Productos de Interes -->
      <div class="home__section-products">
        <%- include('../partials/interest-products', {products: productsSortedByRate, title: "Te puede interesar", count: productsSortedByRate.length} ) %>
      </div>

    <!-- Sección Productos más pedidos -->
      <div class="home__section-products">
        <%- include('../partials/interest-products', {products: productsSortedByCount, title: "Los más pedidos", count: productsSortedByCount.length}) %>
      </div>
  

    <!-- Importación de menú de categorias -->
    <%- include('../partials/categories') %>
  </div>
</main>

<%- include('../partials/footer') %>


