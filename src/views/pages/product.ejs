<%- include('../partials/head', {variable : "Products | MiEcommerce"}) %> <%-
include('../partials/header', {variable_search: true}) %>

<main class="product">
  <div class="product__action-return">
    <a href="/">
      <img src="/images/arrow-left.svg" alt="Flecha volver al listado" />
      Volver al listado
    </a>
    <p>
      <img src="/images/chevron-right.svg" alt="Imagen del producto" /><%= product.category.toUpperCase() %> Bebidas
    </p>
  </div>

  <% if(product!=null) {%> <%- include('../partials/main-product', {product:
  product}) %>
    <div class="home__section-products">
      <%- include('../partials/interest-products', {products: productsSortedByCategory, title: "También te puede interesar", count: 4}) %>
    </div>
  <% }else{ %>

    <div class="not-found">

      <div class="not-found__title">
        <h2>Producto no encontrado</h2>
      </div>

      <div class="not-found__img">
        <img src="/images/not-found.svg" alt="">
      </div>

    </div>

    <div class="home__section-products">
      <%- include('../partials/interest-products', {products: productsByRate, title: "Quizás te pueda interesar", count: 4}) %>
    </div>

  <% } %>

  <!-- Importamos menú categorías-->
  <%- include('../partials/categories') %>
</main>

<%- include('../partials/footer') %>
