<%- include('../partials/head', {variable : "Login | MiEcommerce"}) %> 
<%-include('../partials/header', {variable_search: false}) %>
<main class="access">
  <div class="access__bg-green"></div>
  <div class="access__container">
    <div class="access__card">
      <h2 class="access__card__title">¡Hola!</h2>
      <form class="access__card__form" name="loginForm">
        <%- include('../partials/input',{type: 'text', placeholder: 'Ingrese email', name: 'Correo'  }) %> 
        <%- include('../partials/input',{type: 'password', placeholder: 'Tu contraseña', name: 'Password' }) %> 
        <label for="keepSession" class="keepSession"><input type="checkbox" name="keepSession" id="keepSession">Mantener sesión iniciada</label>
        <%-include('../partials/button',{text: 'Iniciar Sesión', type: 'submit'}) %>
      </form>
    </div>
    <p class="access__text" for="">
      ¿No tienes cuenta? <a class="access__text__link link-effect" href="register">Regístrate</a>
    </p>
  </div>
 
  
  
</main>
<%- include('../partials/modal') %>
<script src="/js/login.js" type="module"> </script>
<%- include('../partials/footer') %>